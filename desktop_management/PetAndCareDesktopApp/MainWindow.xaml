<Window x:Class="PetAndCareDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetAndCareDesktopApp"
        mc:Ignorable="d"
        Title="Pet and Care Admin felület" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Bejelentkezés">
                <Grid Background="#FFE5E5E5" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition MinWidth="100"  Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition MinWidth="100" Width="*" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition MinWidth="100" Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="25"  Height="Auto"/>
                        <RowDefinition MinHeight="25"  Height="Auto"/>
                        <RowDefinition MinHeight="25"  Height="Auto"/>
                        <RowDefinition MinHeight="25"  Height="Auto"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Column="0" Grid.Row="0" x:Name="userName" Content="Felhasználónév:" Target="{Binding ElementName=usernameTB}"/>
                    <TextBox Grid.Column="1" Grid.Row="0" x:Name="usernameTB" TextWrapping="Wrap" Text="root" ForceCursor="True" VerticalAlignment="Center" />
                    <Label Grid.Column="0" Grid.Row="1"  x:Name="password" Content="Jelszó:" Target="{Binding ElementName=passwordPB}"/>
                    <PasswordBox Grid.Column="1" Grid.Row="1" x:Name="passwordPB" />

                </Grid>
            </TabItem>
            <TabItem Header="Kutyák">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Cicák">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Egyéb">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
